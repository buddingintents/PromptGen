<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider Settings"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <!-- Active Provider Display -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardActiveProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginBottom="@dimen/margin_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Currently Active Provider"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_small"/>

                <TextView
                    android:id="@+id/tvActiveProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active Provider: Loading..."
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/input_background"
                    android:padding="@dimen/padding_small"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Provider Configuration -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProviderConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintTop_toBottomOf="@id/cardActiveProvider"
            android:layout_marginBottom="@dimen/margin_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configure Provider"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_medium"/>

                <!-- Provider Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Provider:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_tiny"/>

                <Spinner
                    android:id="@+id/spinnerProvider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:background="@drawable/input_background"
                    android:layout_marginBottom="@dimen/margin_medium"/>

                <!-- API Key Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API Key:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_tiny"/>

                <EditText
                    android:id="@+id/etApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/input_background"
                    android:padding="@dimen/padding_medium"
                    android:hint="Enter your API key"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:inputType="textPassword"
                    android:layout_marginBottom="@dimen/margin_medium"/>

                <!-- Custom Endpoint -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Endpoint (Optional):"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_tiny"/>

                <EditText
                    android:id="@+id/etEndpoint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/input_background"
                    android:padding="@dimen/padding_medium"
                    android:hint="Custom API endpoint URL"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:inputType="textUri"
                    android:layout_marginBottom="@dimen/margin_medium"/>

                <!-- Custom Model -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Model (Optional):"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_tiny"/>

                <EditText
                    android:id="@+id/etCustomModel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/input_background"
                    android:padding="@dimen/padding_medium"
                    android:hint="Custom model name"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:inputType="text"
                    android:layout_marginBottom="@dimen/margin_medium"/>

                <!-- Provider Notes -->
                <TextView
                    android:id="@+id/tvProviderNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a provider above for configuration details and instructions."
                    android:textSize="@dimen/text_size_tiny"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/input_background"
                    android:padding="@dimen/padding_medium"
                    android:layout_marginBottom="@dimen/margin_medium"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:background="@drawable/btn_primary"
                        android:text="Save Configuration"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginEnd="@dimen/margin_small"/>

                    <Button
                        android:id="@+id/btnSetActive"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:background="@drawable/btn_secondary"
                        android:text="Set Active"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginEnd="@dimen/margin_small"/>

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:background="@drawable/btn_secondary"
                        android:text="Delete"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Configured Providers List -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardConfiguredProviders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintTop_toBottomOf="@id/cardProviderConfig"
            android:layout_marginBottom="@dimen/margin_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configured Providers"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_small"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap any provider to edit its configuration"
                    android:textSize="@dimen/text_size_tiny"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="@dimen/margin_small"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvConfiguredProviders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>