<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="@dimen/padding_medium"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_center"
        android:layout_marginBottom="@dimen/margin_small"/>

    <TextView
        android:id="@+id/tvProviderStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Provider: Loading..."
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_small"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Left Panel - Input -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/cardControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your request:"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_small"/>

            <EditText
                android:id="@+id/etInput"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:padding="@dimen/padding_medium"
                android:hint="Describe what you want to generate..."
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:imeOptions="actionGo"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/tvTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Theme: general"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/margin_small"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Right Panel - Output -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOutput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintTop_toBottomOf="@id/tvProviderStatus"
        app:layout_constraintBottom_toTopOf="@id/cardControls"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generated Prompt:"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_small"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:padding="@dimen/padding_medium"
                    android:text="Your refined prompt will appear here..."
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/text_primary"
                    android:textIsSelectable="true"/>

            </ScrollView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_small"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Controls -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium"
            android:gravity="center">

            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="2"
                android:background="@drawable/btn_primary"
                android:text="Generate"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginEnd="@dimen/margin_small"/>

            <Button
                android:id="@+id/btnCopy"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:text="Copy"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginEnd="@dimen/margin_small"/>

            <Button
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:text="Share"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginEnd="@dimen/margin_small"/>

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:text="History"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginEnd="@dimen/margin_small"/>

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:text="Settings"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Ad Banner -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2020561089374332/7040832547"/>

</androidx.constraintlayout.widget.ConstraintLayout>