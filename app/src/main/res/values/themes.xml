<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Unified app theme using Material3.
        This file replaces both previous themes.xml and styles.xml theme blocks
        to avoid duplicate [style/Theme.PromptGen] errors.
    -->
    <style name="Theme.PromptGen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand colors (mapped to your palette) -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <item name="colorSecondary">@color/accent_purple</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>

        <!-- Surfaces and background -->
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorSurfaceContainer">@color/surface_light</item>
        <item name="android:windowBackground">@color/background_main</item>

        <!-- Content colors -->
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOutline">@color/border_light</item>

        <!-- Status/navigation bars -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/surface_white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Typography defaults for convenience (optional) -->
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Optional variant without ActionBar (explicit) -->
    <style name="Theme.PromptGen.NoActionBar" parent="Theme.PromptGen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Widget styles (aliases to your drawables), keep them here or in a separate styles-widgets.xml -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="EditText.Modern" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Text.Heading1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Text.Heading2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Text.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Theme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <!-- You can add common text attributes here -->
        <item name="android:textColor">#000000</item> <!-- Example: Black text color -->
        <item name="android:textSize">16sp</item>
    </style>

</resources>